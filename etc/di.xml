<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    
    <preference for="Magento\Checkout\Model\ShippingInformationManagement" type="Tigren\CompanyAccount\Model\ShippingInformationManagement" />
    <preference for="Magento\Theme\Block\Html\Title" type="Tigren\CompanyAccount\Block\Html\Title" />
    <preference for="Mirasvit\Rma\Block\Rma\NewRma\Step2\Info" type="Tigren\CompanyAccount\Block\Rma\NewRma\Step2\Info" />
    <preference for="Mirasvit\Rma\Block\Rma\Listing\Listing" type="Tigren\CompanyAccount\Block\Rma\Listing\Listing" />
    <preference for="Mirasvit\Rma\Helper\Order\Html" type="Tigren\CompanyAccount\Helper\Order\Html" />
    <preference for="\Tigren\CompanyAccount\Api\AccountManagementInterface" 
                type="\Tigren\CompanyAccount\Model\AccountManagement" />

    <preference for="\Tigren\CompanyAccount\Api\AccountAddressManagementInterface"
                type="\Tigren\CompanyAccount\Model\AccountAddressManagement" />

    <preference for="Tigren\CompanyAccount\Api\Data\AccountInterface" 
                type="Tigren\CompanyAccount\Model\Data\Account" />

    <preference for="Tigren\CompanyAccount\Api\Data\CustomerInterface"
                type="Tigren\CompanyAccount\Model\Data\Customer" />

    <preference for="Tigren\CompanyAccount\Api\Data\AccountAddressInterface"
                type="Tigren\CompanyAccount\Model\Data\AccountAddress" />

    <!--<preference for="Magento\Backend\Block\Widget\Grid\Column\Renderer\Checkbox"-->
                <!--type="Tigren\CompanyAccount\Plugin\Backend\Widget\Grid\Column\Renderer\CheckboxBackend" />-->

    <virtualType name="AccountGridFilterPool" type="Magento\Framework\View\Element\UiComponent\DataProvider\FilterPool">
        <arguments>
            <argument name="appliers" xsi:type="array">
                <item name="regular" xsi:type="object">Magento\Framework\View\Element\UiComponent\DataProvider\RegularFilter</item>
                <item name="fulltext" xsi:type="object">Magento\Framework\View\Element\UiComponent\DataProvider\FulltextFilter</item>
            </argument>
        </arguments>
    </virtualType>
    <virtualType name="AccountGridDataProvider" type="Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider">
        <arguments>
            <argument name="collection" xsi:type="object" shared="false">Tigren\CompanyAccount\Model\Resource\Account\Collection</argument>
            <argument name="filterPool" xsi:type="object" shared="false">AccountGridFilterPool</argument>
        </arguments>
    </virtualType>
    <virtualType name="Tigren\CompanyAccount\Model\ResourceModel\Account\Grid\Collection" type="Magento\Framework\View\Element\UiComponent\DataProvider\SearchResult">
        <arguments>
            <argument name="mainTable" xsi:type="string">tigren_comaccount_account</argument>
            <argument name="resourceModel" xsi:type="string">Tigren\CompanyAccount\Model\ResourceModel\Account</argument>
        </arguments>
    </virtualType>
    <type name="Magento\Framework\View\Element\UiComponent\DataProvider\CollectionFactory">
        <arguments>
            <argument name="collections" xsi:type="array">
                <item name="companyaccount_account_listing_data_source" xsi:type="string">Tigren\CompanyAccount\Model\ResourceModel\Account\Grid\Collection</item>
            </argument>
        </arguments>
    </type>
    <type name="Magento\Sales\Api\OrderRepositoryInterface">
        <plugin name="addExtensionAttributeOrderItem"
                type="Tigren\CompanyAccount\Model\Plugin\Sales\OrderRepository"/>
    </type>

    <!-- <type name="Magento\Backend\Block\Widget\Grid\Column\Renderer\Checkbox">
        <plugin name="checkboxBackend"
                type="Tigren\CompanyAccount\Plugin\Backend\Widget\Grid\Column\Renderer\CheckboxBackend"/>
    </type> -->

</config>